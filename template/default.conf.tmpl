server {
    listen       80;
    server_name  localhost;
		rewrite ^(/.*)\.html(\?.*)?$ $1$2 permanent;
		rewrite ^/(.*)/$ /$1 permanent;
    location / {
        root   /usr/share/nginx/html/${SHA_FOLDER};
        index  index.html index.htm;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

}

